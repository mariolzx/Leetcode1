//Time Complexity of optimized solution: O(logn)

public class Solution {
public double power(double x, int n) {
	if (n == 0)
		return 1;
 
	double v = power(x, n / 2);
 
	if (n % 2 == 0) {
		return v * v;
	} else {
		return v * v * x;
	}
}
 
public double pow(double x, int n) {
	if (n < 0) {
		return 1 / power(x, -n);
	} else {
		return power(x, n);
	}
}
}

////////////////////////
public class Solution {
    public double pow(double x, int n) {
        double res=1;
        double result=0;
        int m=Math.abs(n);
        while (m>0) {
            if (m%2!=0) {res=res*x;}
            m=m/2;
            x=x*x;
        }
    if (n<0) return 1/res;
    return res;
    }
}



